{
  "name": "bringmehome",
  "version": "1.0.0",
  "description": "**Bring Me Home** is a simple web application (HTML, CSS, JS) created as a university assignment.\r It represents a single animal shelter where users can view animals and potentially adopt them.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-snackbar": "cd ./src/packages/snackbar && rollup -c ./rollup.config.js",
    "format": "npx prettier . --write --ignore-path .prettierignore && node scripts/format-html.js",
    "format-check": "node commands.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx --no -- lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,html,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szludora/BringMeHome.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "issues": {
    "url": "https://github.com/szludora/BringMeHome/issues"
  },
  "homepage": "https://github.com/szludora/BringMeHome#readme",
  "devDependencies": {
    "prettier": "^2.5.1",
    "glob": "^11.0.3",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "inquirer": "^12.10.0"
  }
}
